
# COVID-19 Data Analysis Report

import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Load dataset
df = pd.read_csv('data/covid_19_clean_complete.csv')

# Convert date column
df['Date'] = pd.to_datetime(df['Date'])

# Fill missing values
df = df.fillna(0)

# Filter India data
india = df[df['Country/Region'] == 'India']

# Plot daily confirmed cases
plt.figure(figsize=(10,5))
plt.plot(india['Date'], india['Confirmed'], label='Daily Confirmed')
plt.title('India Daily COVID-19 Confirmed Cases')
plt.xlabel('Date')
plt.ylabel('Cases')
plt.legend()
plt.show()

# Rolling average
india['rolling_cases'] = india['Confirmed'].rolling(7).mean()

plt.figure(figsize=(10,5))
plt.plot(india['Date'], india['Confirmed'], label='Daily Cases')
plt.plot(india['Date'], india['rolling_cases'], label='7-Day Rolling Average')
plt.title('India COVID-19 Trend with Rolling Average')
plt.legend()
plt.show()

# Country comparison
countries = ['India', 'US', 'China']
compare = df[df['Country/Region'].isin(countries)]

plt.figure(figsize=(10,5))
sns.lineplot(data=compare, x='Date', y='Confirmed', hue='Country/Region')
plt.title('COVID-19 Confirmed Cases Comparison')
plt.show()
